<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Enforce_EVO_Viva_Surgeon_Certification</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    Contains_EVO_Viva_Product__c,
    ISPICKVAL(Surgeon__r.EVO_Viva_Certification_Status__c, &quot;Not Certified&quot;)
)</errorConditionFormula>
    <errorMessage>Error: The selected surgeon is not certified for the EVO Viva lens. Please remove the product or select a different surgeon to proceed.</errorMessage>
</ValidationRule>
