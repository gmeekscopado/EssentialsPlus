<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Form_Must_Have_Creator</fullName>
    <active>true</active>
    <errorConditionFormula>CONTAINS( CreatedBy.FirstName, CreatedBy.LastName  )</errorConditionFormula>
    <errorDisplayField>OwnerId</errorDisplayField>
    <errorMessage>Please list the creator of this form.</errorMessage>
</ValidationRule>
