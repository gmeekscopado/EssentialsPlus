<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Department_for_Occupation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Occupation__c)),
    ISBLANK(TEXT(Department__c))
)</errorConditionFormula>
    <errorMessage>If an occupation is specified, please select which department the contact reports to.</errorMessage>
</ValidationRule>
