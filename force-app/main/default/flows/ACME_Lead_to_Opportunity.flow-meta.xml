    <decisions>
        <description>Determine if existing account was found or if new account creation is required</description>
        <name>Decision_Account_Found</name>
        <label>Account Found Decision</label>
        <locationX>182</locationX>
        <locationY>518</locationY>
        <defaultConnector>
            <targetReference>Create_Account_Record</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Create New Account</defaultConnectorLabel>
        <rules>
            <name>Outcome_Account_Exists</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Existing_Account</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
