<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <description>Automated flow to convert qualified leads to opportunities with account association. Supports both existing account lookup and new account creation based on company information.</description>
    <label>ACME Lead to Opportunity Automation</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description>Lookup existing account by company name to avoid duplicates</description>
        <name>Get_Existing_Account</name>
        <label>Get Existing Account</label>
        <locationX>314</locationX>
        <locationY>278</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Decision_Account_Found</targetReference>
        </connector>
        <faultConnector>
            <targetReference>Handle_Account_Lookup_Error</targetReference>
        </faultConnector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Name</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>var_InputLead.Company</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>Account</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordCreates>
        <description>Create new account record when no existing account found</description>
        <name>Create_Account_Record</name>
        <label>Create Account Record</label>
        <locationX>50</locationX>
        <locationY>518</locationY>
        <connector>
            <targetReference>Set_New_Account_Success</targetReference>
        </connector>
        <faultConnector>
            <targetReference>Handle_Account_Creation_Error</targetReference>
        </faultConnector>
        <inputAssignments>
            <field>Name</field>
            <value>
                <elementReference>var_InputLead.Company</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Type</field>
            <value>
                <stringValue>Prospect</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>BillingStreet</field>
            <value>
                <elementReference>var_InputLead.Street</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>BillingCity</field>
            <value>
                <elementReference>var_InputLead.City</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>BillingState</field>
            <value>
                <elementReference>var_InputLead.State</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>BillingPostalCode</field>
            <value>
                <elementReference>var_InputLead.PostalCode</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>BillingCountry</field>
            <value>
                <elementReference>var_InputLead.Country</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Phone</field>
            <value>
                <elementReference>var_InputLead.Phone</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Website</field>
            <value>
                <elementReference>var_InputLead.Website</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Industry</field>
            <value>
                <elementReference>var_InputLead.Industry</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>NumberOfEmployees</field>
            <value>
                <elementReference>var_InputLead.NumberOfEmployees</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>AnnualRevenue</field>
            <value>
                <elementReference>var_InputLead.AnnualRevenue</elementReference>
            </value>
        </inputAssignments>
        <object>Account</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordCreates>
    <recordCreates>
        <description>Create opportunity record linked to target account</description>
        <name>Create_Opportunity_Record</name>
        <label>Create Opportunity Record</label>
        <locationX>314</locationX>
        <locationY>758</locationY>
        <connector>
            <targetReference>Set_Process_Success</targetReference>
        </connector>
        <faultConnector>
            <targetReference>Handle_Opportunity_Creation_Error</targetReference>
        </faultConnector>
        <inputAssignments>
            <field>Name</field>
            <value>
                <elementReference>formula_OpportunityName</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>AccountId</field>
            <value>
                <elementReference>var_TargetAccountId</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>StageName</field>
            <value>
                <stringValue>Qualification</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>CloseDate</field>
            <value>
                <elementReference>formula_CloseDate</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>LeadSource</field>
            <value>
                <elementReference>var_InputLead.LeadSource</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Description</field>
            <value>
                <elementReference>formula_OpportunityDescription</elementReference>
            </value>
        </inputAssignments>
        <object>Opportunity</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordCreates>
    <decisions>
        <description>Determine if an existing account was found for the company</description>
        <name>Decision_Account_Found</name>
        <label>Decision: Account Found?</label>
        <locationX>314</locationX>
        <locationY>398</locationY>
        <defaultConnector>
            <targetReference>Create_Account_Record</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No Account Found</defaultConnectorLabel>
        <rules>
            <name>Account_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Existing_Account</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Existing_Account_Success</targetReference>
            </connector>
            <label>Account Found</label>
        </rules>
    </decisions>
    <decisions>
        <description>Check if account was successfully identified or created before proceeding to opportunity creation</description>
        <name>Decision_Account_Success</name>
        <label>Decision: Account Success?</label>
        <locationX>314</locationX>
        <locationY>638</locationY>
        <defaultConnector>
            <targetReference>Handle_General_Account_Error</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Account Process Failed</defaultConnectorLabel>
        <rules>
            <name>Account_Ready</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>var_TargetAccountId</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Opportunity_Record</targetReference>
            </connector>
            <label>Account Ready</label>
        </rules>
    </decisions>
    <formulas>
        <description>Generate opportunity name based on company and current date</description>
        <name>formula_OpportunityName</name>
        <dataType>String</dataType>
        <expression>{!var_InputLead.Company} + " - " + TEXT(TODAY())</expression>
    </formulas>
    <formulas>
        <description>Set opportunity close date to 30 days from today</description>
        <name>formula_CloseDate</name>
        <dataType>Date</dataType>
        <expression>TODAY() + 30</expression>
    </formulas>
    <formulas>
        <description>Generate opportunity description with lead information</description>
        <name>formula_OpportunityDescription</name>
        <dataType>String</dataType>
        <expression>"Opportunity created from lead: " + {!var_InputLead.FirstName} + " " + {!var_InputLead.LastName} + 
IF(NOT(ISBLANK({!var_InputLead.Email})), " (" + {!var_InputLead.Email} + ")", "") + 
IF(NOT(ISBLANK({!var_InputLead.Title})), ", Title: " + {!var_InputLead.Title}, "")</expression>
    </formulas>
    <assignments>
        <description>Set target account to existing found account</description>
        <name>Set_Existing_Account_Success</name>
        <label>Set Existing Account Success</label>
        <locationX>578</locationX>
        <locationY>518</locationY>
        <assignmentItems>
            <assignToReference>var_TargetAccountId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Get_Existing_Account.Id</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>var_ProcessStatus</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Account Found</stringValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Decision_Account_Success</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>Set target account to newly created account</description>
        <name>Set_New_Account_Success</name>
        <label>Set New Account Success</label>
        <locationX>50</locationX>
        <locationY>638</locationY>
        <assignmentItems>
            <assignToReference>var_TargetAccountId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Create_Account_Record</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>var_ProcessStatus</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Account Created</stringValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Decision_Account_Success</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>Set success status and output variables after opportunity creation</description>
        <name>Set_Process_Success</name>
        <label>Set Process Success</label>
        <locationX>314</locationX>
        <locationY>878</locationY>
        <assignmentItems>
            <assignToReference>var_ProcessStatus</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Success</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>var_CreatedOpportunityId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Create_Opportunity_Record</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>var_ErrorMessage</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue></stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <assignments>
        <description>Handle account lookup errors</description>
        <name>Handle_Account_Lookup_Error</name>
        <label>Handle Account Lookup Error</label>
        <locationX>578</locationX>
        <locationY>398</locationY>
        <assignmentItems>
            <assignToReference>var_ProcessStatus</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Error</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>var_ErrorMessage</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Failed to lookup existing account: {!$Flow.FaultMessage}</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <assignments>
        <description>Handle account creation errors</description>
        <name>Handle_Account_Creation_Error</name>
        <label>Handle Account Creation Error</label>
        <locationX>50</locationX>
        <locationY>758</locationY>
        <assignmentItems>
            <assignToReference>var_ProcessStatus</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Error</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>var_ErrorMessage</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Failed to create new account: {!$Flow.FaultMessage}</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <assignments>
        <description>Handle opportunity creation errors</description>
        <name>Handle_Opportunity_Creation_Error</name>
        <label>Handle Opportunity Creation Error</label>
        <locationX>578</locationX>
        <locationY>878</locationY>
        <assignmentItems>
            <assignToReference>var_ProcessStatus</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Error</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>var_ErrorMessage</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Failed to create opportunity: {!$Flow.FaultMessage}</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <assignments>
        <description>Handle general account processing errors</description>
        <name>Handle_General_Account_Error</name>
        <label>Handle General Account Error</label>
        <locationX>578</locationX>
        <locationY>758</locationY>
        <assignmentItems>
            <assignToReference>var_ProcessStatus</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Error</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>var_ErrorMessage</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Account processing failed - unable to proceed with opportunity creation</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <variables>
        <description>Input lead record to be processed for opportunity conversion</description>
        <name>var_InputLead</name>
        <dataType>SObject</dataType>
        <isInput>true</isInput>
        <objectType>Lead</objectType>
    </variables>
    <variables>
        <description>Target account ID for opportunity association - either found existing or newly created account ID</description>
        <name>var_TargetAccountId</name>
        <dataType>String</dataType>
    </variables>
    <variables>
        <description>Output variable containing the ID of the successfully created opportunity record</description>
        <name>var_CreatedOpportunityId</name>
        <dataType>String</dataType>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <description>Process status indicator for monitoring and debugging</description>
        <name>var_ProcessStatus</name>
        <dataType>String</dataType>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <description>Error message details for troubleshooting failed executions</description>
        <name>var_ErrorMessage</name>
        <dataType>String</dataType>
        <isOutput>true</isOutput>
    </variables>
    <start>
        <locationX>188</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Existing_Account</targetReference>
        </connector>
    </start>
    <status>Draft</status>
</Flow>
