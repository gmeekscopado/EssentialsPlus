            </connector>
            <label>Account Exists</label>
        </rules>
    </decisions>
    <decisions>
        <description>Check if account creation or lookup was successful before proceeding to opportunity creation</description>
        <name>Decision_Account_Success</name>
        <label>Account Success Decision</label>
        <locationX>182</locationX>
        <locationY>878</locationY>
        <defaultConnector>
            <targetReference>Set_Opportunity_Creation_Error</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Account Failed</defaultConnectorLabel>
        <rules>
            <name>Outcome_Account_Success</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>var_AccountCreationSuccess</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>var_TargetAccountId</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Opportunity_Record</targetReference>
            </connector>
            <label>Account Success</label>
        </rules>
    </decisions>
    <decisions>
        <description>Comprehensive lead qualification check including status, company name, and email validation</description>
        <name>Decision_Lead_Qualification</name>
        <label>Lead Qualification Decision</label>
        <locationX>182</locationX>
        <locationY>158</locationY>
        <defaultConnector>
            <targetReference>Set_Qualification_Error</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Not Qualified</defaultConnectorLabel>
        <rules>
            <name>Outcome_Lead_Qualified</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>var_InputLead.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Qualified</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>var_InputLead.Company</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>var_InputLead.Email</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Existing_Account</targetReference>
            </connector>
            <label>Lead Qualified</label>
        </rules>
    </decisions>
