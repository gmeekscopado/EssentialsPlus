    <formulas>
        <description>Calculate lead score based on multiple factors</description>
        <name>formula_LeadScore</name>
        <dataType>Number</dataType>
        <scale>0</scale>
        <expression>/* Base score */
20 +

/* Industry bonus */
CASE({!var_InputLead.Industry},
  "Technology", 25,
  "Financial Services", 20,
  "Healthcare", 15,
  "Manufacturing", 10,
  5
) +

/* Lead Source bonus */
CASE({!var_InputLead.LeadSource},
  "Web", 20,
  "Partner Referral", 25,
  "Trade Show", 15,
  "Advertisement", 10,
  5
) +

/* Annual Revenue bonus */
IF(ISNULL({!var_InputLead.AnnualRevenue}), 0,
  IF({!var_InputLead.AnnualRevenue} >= 10000000, 25,
    IF({!var_InputLead.AnnualRevenue} >= 1000000, 20,
      IF({!var_InputLead.AnnualRevenue} >= 100000, 15,
        IF({!var_InputLead.AnnualRevenue} >= 10000, 10, 5)
      )
    )
  )
) +

/* Number of Employees bonus */
IF(ISNULL({!var_InputLead.NumberOfEmployees}), 0,
  IF({!var_InputLead.NumberOfEmployees} >= 500, 20,
    IF({!var_InputLead.NumberOfEmployees} >= 100, 15,
      IF({!var_InputLead.NumberOfEmployees} >= 50, 10,
        IF({!var_InputLead.NumberOfEmployees} >= 10, 5, 0)
      )
    )
  )
)</expression>
    </formulas>
